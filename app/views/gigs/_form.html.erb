<%= simple_form_for(@gig, html: { class: "form-horizontal"}) do |f| %>


  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>

  <%= f.full_error :image_content_type, class: "alert alert-error" %>


  <%= f.input :image, label: "Upload a Profile Image" %>
  <%= f.input :image_remote_url, label: "or enter URL" %>
  
  <%= f.input :desription, as: :text, input_html: { rows: "3" } %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
