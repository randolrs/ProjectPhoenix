<div class="usersignupcontainer">

<div class = "headtext">

<h4>Welcome! Sign up for SongBird</h4>

</div>

<div class="usersignuppadding">

<div class = "haveacct">
    Already have an account? <a href="http://localhost:3000/users/sign_in">Login</a>
</div>

<h4> </h4>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-vertical'}) do |f| %>

  
<div class="usersignupform">

  <h5> Email Address </h5>

    <%= f.input :email, :label => false, :placeholder =>'Email Address' %>


  <h5> Phone Number </h5>

    <%= f.input :phone, :label => false, :placeholder =>'Phone Number' %>

  <h5> Password </h5>

    <%= f.input :password, :label => false, :placeholder =>'Password' %>


</div>

<div class="usersignupbtn">
 
    <%= f.submit "Sign up and continue", class: "btn btn-primary" %>

</div>   


<% end %>

<ul>
  <%= render "devise/shared/links" %>

</ul>

</div>

</div>
      




      





