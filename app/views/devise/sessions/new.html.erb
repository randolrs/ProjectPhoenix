<div class="userlogin">

	<div class="logincontainer">

		<div class="login-header">
			
			<h1> Sign In </h1>

		</div>

		<div class="userloginpadding">


		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-vertical'}) do |f| %>

  		

			<div class="userlogin-form">

				<h6> Email Address </h6>

				  <%= f.input :email, :label => false, :placeholder =>'Email Address' %>


				<h6> Password </h6>

				  <%= f.input :password, :label => false, :placeholder =>'Password' %>

			</div>

			<div class="userloginbtn">
 
    			<%= f.submit "Sign In", class: "btn btn-primary" %>

			</div>  

		<% end %>

		<div class="login-footer">
			
			<ul id="loginfooter">
				
				<li> <a href="/users/password/new"> Forgot Your Password? </a> </li>
				<li> <a href="/users/sign_up"> Sign up </a> </li>
				

			</ul>

		</div>

	</div>




</div>	


	

